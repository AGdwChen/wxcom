.dots_list_view {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 14rpx;
}

.dots_item_view {
  width: 12rpx;
  height: 12rpx;
  margin: auto 10rpx;
}

.dots_item_select {
  border-style: solid;
  border-width: 2rpx;
  border-color: rgb(209, 209, 209);
  border-radius: 7rpx;
}

.dots_item_unselect {
  background-color: rgb(209, 209, 209);
  border-radius: 6rpx;
}

.dots_item_select_large {
  width: 34rpx;
  background-color: rgb(255, 255, 255);
  border-radius: 6rpx;
}
